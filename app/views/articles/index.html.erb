<h1>Articles listing page</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |theitem| %>
      <tr>
        <td><%= theitem.title %></td>
        <td><%= theitem.description %></td>
        <td>
          <a href="/articles/<%= theitem.id %>">Show</a>
        </td>
    </tr>
    <% end %>
  </tbody>

</table>